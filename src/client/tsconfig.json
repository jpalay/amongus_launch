{
  "compilerOptions": {
    "lib": [
      "es6",
      "es2019",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "module": "es6",
    "target": "es6",
    "rootDir": "../",
    "composite": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../../dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../node_modules/*"
      ]
    }
  },
  "include": [
    "../**/*"
  ]
}
